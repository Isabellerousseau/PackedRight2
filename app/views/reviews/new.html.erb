<div class="container">
  <div class="row">
    <div class="col-6 offset-3">

      <h1><%= "Review #{@order.driver.user.name}" %></h1>

      <div>
        <%= simple_form_for [@order, @review] do |f| %>
        <%= f.input :decription %>
        <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
        <%= f.submit "add review", class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
