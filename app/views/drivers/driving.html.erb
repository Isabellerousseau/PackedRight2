</div>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#driver_modal" id="modalbtn" hidden>
  Launch demo modal
</button>
<!-- Modal -->
<div class="modal fade" id="driver_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">You have a new order!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p> Parcel: <%= @driver.orders&.last&.parcel&.name %></p>
        <p>Pickup location:<%= @driver.orders&.last&.pickup %></p>
        <p>Drop-off location<%= @driver.orders&.last&.drop_off %></p>
        <p>Is it fragile?: <%= @driver.orders&.last&.parcel&.fragile %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <% if !@driver.orders.empty? %>
          <%= link_to 'GO!', order_path(@driver.orders&.last), :class => 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

