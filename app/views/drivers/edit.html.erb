<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <%= simple_form_for @driver do |f| %>
        <%= f.input :address%>
        <%= f.input :category, collection: Driver::CATEGORY %>

        <div class="btn btn-primary">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
