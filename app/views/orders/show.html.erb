<div class="map-container">

  <div
  class="top"
  class="positionmap"
  id="map"
  data-show-route="1"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  >
  <div>
  <%= render 'shared/navbar-new' %>
  </div>

  <% if current_user.driver.id == @order.driver.id %>
    <div>
      <%= form_tag order_path(@order), method: 'patch' do %>
        <%= hidden_field_tag 'order[status]', "delivered" %>
        <%= submit_tag 'Package delivered!', class: 'btn btn-primary delivered-btn' %>
      <% end %>
    </div>
  <% end %>

</div>

<div
  id="messages-box"
  data-order-id="<%= @order.id %>"
  data-is-driver="<%= current_user.is_driver? %>"
>
  <%= render 'shared/accordion-messages' %>
</div>
</div>

