<div id="accordion">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0">
        <button class="btn btn-link width100" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Book a Ride!
        </button>
      </h5>
    </div>

    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">


        <%= simple_form_for @order do |f| %>
        <%= f.input :pickup, label: false %>
        <%= f.input :drop_off, label: false %>
        <%= f.input :pickup_time, label: false, placeholder: 'When should we pick it up?' %>
        <%= f.fields_for :parcel do |pf| %>
        <%= pf.input :name,label: false,  placeholder: 'Product name please', error: 'Product name is mandatory, please specify one' %>
        <%= pf.input :weight, label: false %>
        <%= pf.input :category, label: false, collection: Parcel::CATEGORY %>
        <%= pf.input :fragile, as: :boolean %>
        <% end %>
        <div class="btn btn-primary">
          <%= f.button :submit %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- optie voor label html -->
