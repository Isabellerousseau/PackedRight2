<p>
  <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
    <!-- Link with href -->
  </a>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Button with data-target
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">

<%= simple_form_for @order do |f| %>
        <%= f.input :pickup %>
        <%= f.input :drop_off %>
        <%= f.input :pickup_time, placeholder: 'When should we pick it up?' %>
        <%= f.fields_for :parcel do |pf| %>
          <%= pf.input :name, placeholder: 'Product name please', error: 'Product name is mandatory, please specify one' %>
          <%= pf.input :weight %>
          <%= pf.input :category, collection: Parcel::CATEGORY %>
          <%= pf.input :fragile, as: :radio_buttons %>
        <% end %>
        <div class="btn btn-primary">
          <%= f.button :submit %>
        </div>
      <% end %>
  </div>
</div>
