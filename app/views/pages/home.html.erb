<div
class="positionmap"
id="map"
data-markers="<%= @markers.to_json %>"
data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
>
</div>
<div class="dropdown dropdown-custom">
  <button class="btn btn-secondary dropdown-toggle dropmenu" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Menu
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
    <button class="dropdown-item" type="button"><img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" /> <%= current_user.email %></button>
    <button class="dropdown-item" type="button"><% if policy(User).create? %><%= link_to "Your orders", orders_path %><% end %></button>
    <button class="dropdown-item" type="button"></button>
    <button class="dropdown-item" type="button"><%=link_to "Become a driver", new_driver_path %></button>
    <button class="dropdown-item" type="button"><% if policy(User).create? %><%= link_to "Update profile", edit_user_registration_path %><% end %></button>
  </div>
</div>

<div class="container">
  <% if current_user %>
    <h1><%= @greet %> <%= current_user.email %></h1>
  <% end %>
</div>

